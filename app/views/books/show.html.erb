
<div class="bookbox">
      <!-- Display the movie's info here -->
      <div class="bookinfo text-center">
        <%# cl_image_tag @book.image %>
        <h3 class="book-title"><%= @book.title %></h3>
        <p class="book-description"><% @book.description %></p>
      </div>

      <div class="bookinfo text-center">
        <ul class="infolist">
          <li><%= @book.title %> - <%= @book.price %> </li>
           <li><%= @book.category %> </li>
           <% @book.orders.each do |order| %>
             <li> <%= order.start_time %> </li>
           <% end %>
          <!-- DESCRIPTION AND OTHER ATTRIBUTES -->
        </ul>
    <!-- FORM FOR ORDER -->
        <%= simple_form_for [@book, @order] do |f| %>
          <%= f.input :start_time, as: :date, html5: true %>
          <%= f.input :end_time, as: :date, html5: true %>
          <%= f.button :submit, class: 'btn btn-primary' %>
        <% end %>
  </div>
</div>
