<div class="container margin-top">
  <div class="row">

   <h3 class="index-title"> <span class="blue"> <%= @user.first_name %> </span><%= @user.last_name %> - <i>Your next lectures </i> </h3>

   <% @user.orders.each do |order| %>

   <div class="col-xs-12 col-sm-6 col-md-4 padded">
    <div class="card">
      <div class = "card-image" style="background-image: linear-gradient(rgba(0,0,0,0.2), rgba(0,0,0,0.1)), url('<%= cl_image_path order.book.photo.path %>');" > </div>
      <div class="dates"> <%= order.start_time %> -- <%= order.end_time %></div>

      <div class="book-content">
        <h3 class="book-title"> <%=order.book.title%> </h3>
        <div class="book-description"> <%= order.book.description %></div>
      </div>
      <h3 class = "book-price"> <%= order.book.price %> $ </h3>
      <span class = "book-category"> <%= order.book.category.upcase %> </span>
      <li> <%= link_to 'show', book_path(order.book) %> </li>
      <%= link_to '', book_path(order.book), class: 'card-link' %>

    </div>
  </div>
  <% end %>

</div>
</div>
<h4 class="under-navbar"><%= link_to "Edit", edit_user_registration_path %></h4>
